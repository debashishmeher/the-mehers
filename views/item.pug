
extends base 

block content 
    .product-item-main 
        .product-photos-container.align-center 
            .container
                .product-photo-main 
                    img#mainPhoto(src=`/./image/product/${product.mainphoto}`, alt="")
                .product-sub-photo 
                    img(src=`/./image/product/${product.mainphoto}`, alt="" onclick=`changePhoto("/./image/product/${product.mainphoto}")`).sub-photo
                    each photo of product.photo
                        img(src=`/./image/product/${photo}`, alt="" onclick=`changePhoto("/./image/product/${photo}")`).sub-photo

        .product-item-info 
            p.product-catagory=product.catagory
            h3=product.name
            p.para=product.desc
            .rating * * * * * (26)
            p.item-price=`₹ ${product.price}.00`
            p.item-discounted=`₹${product.price - (product.price * product.discount / 100)}.00`
                span.offer=` ${product.discount}% off`
            .item-quantity
                button.btn2 -
                input#product-quantity(type="number", value="1")
                button.btn2 +
            .item-btns
                button.btn2.cart-btn#addtocart(data-productid=`${product.id}`) 
                    <?xml version="1.0" encoding="UTF-8"?>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="1.2rem" height="1.2rem" fill="#ffffff"><g id="_01_align_center" data-name="01 align center"><path d="M24,3H4.242L4.2,2.649A3,3,0,0,0,1.222,0H0V2H1.222a1,1,0,0,1,.993.883L3.8,16.351A3,3,0,0,0,6.778,19H20V17H6.778a1,1,0,0,1-.993-.884L5.654,15H21.836ZM20.164,13H5.419L4.478,5H21.607Z"/><circle cx="7" cy="22" r="2"/><circle cx="17" cy="22" r="2"/></g></svg> cart
    h2.sub-heading similar product
    .products-container 
        if(products.length > 0)
            each product of products 
                a(href=`/product/${product.id}`).product-card 
                    img.product-img(src=`/./image/product/${product.mainphoto}`, alt="")
                    .product-info 
                        p.offer=`${product.discount}% off`
                        h2.product-name=product.name 
                        p.product-price=`₹${product.price}.00`
                        p.product-discounted=`₹${product.price - (product.price * product.discount / 100)}.00`
    .align-center
        .review-container 
            each reviews of product.reviews
                .review-box 
                    .review-user-img
                        img(src=`/./image/upload/default-user.png`, alt="")
                    p.user-name=reviews.user.name
                    .rating * * * * *  
                    p.review=reviews.review