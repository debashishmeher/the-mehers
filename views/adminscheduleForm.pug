doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title the meher's | Schedule form
        link(rel="stylesheet" href="/./css/common.css")
        link(rel="stylesheet" href="/./css/form.css")
        link(rel="stylesheet" href="/./css/admin.css")
        link(rel="stylesheet" href="/./css/responsive.css")
    body 
        .form-container 
            form.form#scheduleForm(data-enquary-id=`${id}`)
                h3.form-heading schedule
                .input-box
                    .input-name
                        label(for="scheduleDate") schedule date
                        <svg class="input-icons" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 16 16">
                        <path fill="#ffffff" d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
                        </svg>
                    input(type="date" name="scheduleDate")
                .input-box
                    .input-name
                        label(for="method") method
                        <svg class="input-icons" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 16 16">
                        <path fill="#ffffff" d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
                        </svg>
                    select(name="method") 
                        option(value="") select method
                        option(value="call") call
                        option(value="message") message
                        option(value="email") email
                .input-box
                    .input-name
                        label(for="message") message
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"s class="input-icons" viewBox="0 0 16 16">
                        <path fill="#ffffff" d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2M5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1"/>
                        </svg>
                    //- textarea#blog-title(name="title" rows="4" cols="30")
                    input#blog-title(type="text", name="message")
                button.admin-btn(type="submit") done


        script(src="/./main.js") 
        script(src="/./js/index.js")         