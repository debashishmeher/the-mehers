extend base 

block content
    h1.main-heading cart
    form#order-details.cart-page
        .cart-page
            .cart-container 
                each item, index in items
                    .cart-items 
                        a(href=`/product/${item.product.id}`).cart-item-box
                            .cart-item-img 
                                img(src=`/./image/product/${item.product.mainphoto}`, alt="") 
                            .cart-item-info 
                                h2.product-name=item.product.name 
                                p.product-discounted=`â‚¹${(item.product.price - (item.product.price * item.product.discount / 100))* item.quantity}.00`
                        .quantity 
                            p.product-quantity=item.quantity
            
        .order-address  
            h2 order address
            .address-option
                each addres of address
                    .input-box.address-box 
                        input(type="radio" name="address" value=`${addres.home}, ${addres.street}, ${addres.city}, ${addres.pin}, phone :- ${addres.phone}`)
                        label(for="address")=`${addres.home}, ${addres.street}, ${addres.city}, ${addres.pin}, phone :- ${addres.phone}`
            .btn.add(onclick="showUserEdit()") add address
        .calculation
                .calculation-container 
                    .calculation-box 
                        span.cal-head sub total 
                        span.cal-val=total
                    .calculation-box 
                        span.cal-head discount
                        span.cal-val=discount
                    .calculation-box 
                        span.cal-head sipping
                        span.cal-val=sipping
                    .calculation-box.grand-total 
                        span.cal-head grand total 
                        span.cal-val=`${total + sipping}`
                    button.check-out-btn.btn#chckoutBtn buy
    .form-body.align-center.editactive
        form#user-address.user-box
            <svg xmlns="http://www.w3.org/2000/svg" id="Outline" viewBox="0 0 24 24" width="24" height="24" fill="#ffffff" onclick="showUserEdit()" ><path d="M23.707.293h0a1,1,0,0,0-1.414,0L12,10.586,1.707.293a1,1,0,0,0-1.414,0h0a1,1,0,0,0,0,1.414L10.586,12,.293,22.293a1,1,0,0,0,0,1.414h0a1,1,0,0,0,1.414,0L12,13.414,22.293,23.707a1,1,0,0,0,1.414,0h0a1,1,0,0,0,0-1.414L13.414,12,23.707,1.707A1,1,0,0,0,23.707.293Z"/></svg>
            .address-info 
                .input-box 
                    label(for="name")  home -
                    input#name(type="text" name="home")  
                .input-box 
                    label(for="street")  street -
                    input#email(type="text" name="street")  
                .input-box 
                    label(for="city")  city -
                    input#email(type="text" name="city")  
                .input-box 
                    label(for="pin")  pin -
                    input#email(type="number" name="pin")   
                .input-box 
                    label(for="phone")  phone -
                    input#email(type="number" name="phone")   
            button(type="submit").user-edit save
