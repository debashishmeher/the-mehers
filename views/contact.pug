extend base

block content
    .page-head.align-center.shop-page 
        .page-head-item
            h1.page-heading contact us
            .align-center
                a(href="/").page-link home | 
                a(href="#").page-link shop 
    .about-container 
        section.introduction 
            .contact-photo 
                img(src="/./image/signup.png" alt="")
            form.account-form#enquary
                .login-logo
                    img.logo-img(src="/./image/logo.png" alt="") 
                h3.form-heading signup 
                .input-box
                    .input-name.space-between.font-width-600
                        label(for="name") name
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#0f3443"  viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                        </svg>
                    input#enquary-name(type="text" name="name")
                .input-box
                    .input-name.space-between.font-width-600
                        label(for="phone") Phone
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#0f3443r" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z"/>
                        </svg>
                    input#enquary-phone(type="number" name="phone")
                .input-box
                    .input-name.space-between.font-width-600
                        label(for="email") email
                        <svg class="input-icons" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 16 16">
                        <path fill="#0f3443" d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
                        </svg>
                    input#enquary-email(type="text" name="email")
                button.btn(type="submit") signup
