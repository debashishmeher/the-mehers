    section.top-product 
        h2.sub-heading top catagory
        .home-product-container
            each product of products 
                a(href=`/product/${product.id}`).product-card.home-product-card
                    img.product-img(src=`/./image/product/${product.mainphoto}`, alt="")
                    .product-info 
                        p.offer=`${product.discount}% off`
                        h2.product-name=product.name 
                        p.product-price=`₹${product.price}.00`
                        p.product-discounted=`₹${product.price - (product.price * product.discount / 100)}.00`